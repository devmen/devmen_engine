= simple_form_for [:admin, @page], :html => { :class => 'page_form' }, :remote => true do |form|

  /
    -if @page.errors.any?
      #errorExplanation
        %h2= "#{pluralize(@page.errors.count, "error")} prohibited this #{Page.name.titleize} from being saved:"
        %ul
          - @page.errors.full_messages.each do |msg|
            %li= msg  

  
  = form.input :name, :label => t('.name', :default => 'Name')
  = form.input :url, :label => t('.url', :default => 'Url')
  = form.input :body, :as => :text, :label => t('.content', :default => 'Content'),
      :input_html => { :class => 'markitup' }         

  .actions
    = form.button :submit, :value => t('.create', :default => 'Create')