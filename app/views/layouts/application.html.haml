!!! 5
%html(lang="en")
  %head
    %meta(charset="utf-8")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %title= content_for?(:title) ? yield(:title) : title
    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      = javascript_include_tag "http://html5shim.googlecode.com/svn/trunk/html5.js"
    = stylesheet_link_tag "application", :media => "all"
    %link(href="images/favicon.ico" rel="shortcut icon")
    %link(href="images/apple-touch-icon.png" rel="apple-touch-icon")
    %link(href="images/apple-touch-icon-72x72.png" rel="apple-touch-icon" sizes="72x72")
    %link(href="images/apple-touch-icon-114x114.png" rel="apple-touch-icon" sizes="114x114")

  %body
    - if Rails.env.development? && params[:debug]
      != debug session
    .navbar.navbar-fixed-top
      .navbar-inner
        .container
          %a.btn.btn-navbar(data-target=".nav-collapse" data-toggle="collapse")
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          = link_to "DevmenEngine", root_path, class: "brand"
          .container.nav-collapse
            %ul.nav
              - if module_news?
                %li{class: active_class_for(news_index_path)}
                  = link_to CFG['news']['name'], news_index_path
              - if module_realty?
                %li{class: active_class_for(realty_index_path)}
                  = link_to CFG["realty"]["name"], realty_index_path
              - if module_shop?

                %li.dropdown
                  = link_to "#", class: "dropdown-toggle", :"data-toggle" => "dropdown" do
                    = CFG["shop"]["name"]
                    %b.caret
                  %ul.dropdown-menu
                    %li= link_to t("shop.categories.index.title"), product_categories_path
                    %li= link_to t("shop.products.index.title"), products_path
            %ul.nav.pull-right
              - if current_user
                %li= link_to t('.signout', :default => 'Sign out'), signout_path, :method => :delete
              - else
                %li= link_to t('.signin', :default => 'Sign in'), signin_path

    .container

      .content
        .row
          .span9
            #messages
              = render 'admin/messages'
            = yield
          .span3
            .well.sidebar-nav
              - if module_shop?
                = render 'shop/cart'

      %footer
        %p &copy; Company 2012
    /
      Javascripts
      \==================================================
    / Placed at the end of the document so the pages load faster
    = javascript_include_tag "application"
