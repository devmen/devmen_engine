.wrapper
  .content
    .post
      %h3= t(:new_review)
      = simple_form_for @review, url: reviews_path, html: { class: "form-horizontal" }, defaults: { input_html: { class: "input-xxlarge" } } do |form|
        = form.input :name, label: t(:review_name)
        = form.input :content, label: t(:review_content), input_html: { rows: 10 }
        .form-actions
          = form.button :submit, t(:new_review)

