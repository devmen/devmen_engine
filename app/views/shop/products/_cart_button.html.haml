.cart_button
  = form_tag product_items_path(product_id: product), :id => "cart_button-#{product.id}", :class => 'form-inline', :remote => true do
    = label_tag :quantity, t('.product_count'), :class => 'inline'
    = text_field_tag :quantity, 1, :id => "quantity-#{product.id}",:class => 'input-mini'
    = submit_tag t('.add_to_cart'), :class => 'btn btn-primary'